<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:id="@+id/scan_lay">
    <Button
        android:id="@+id/lunch_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/surfaceView"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:text="lunch_sat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"></Button>
    <Button
        android:id="@+id/dinner_sat"
        android:layout_toRightOf="@id/lunch_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sopar diss"
        android:layout_above="@id/surfaceView"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"></Button>
    <Button
        android:id="@+id/lunch_sun"
        android:layout_toRightOf="@id/dinner_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lunch_sat"
        android:layout_above="@id/surfaceView"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp"></Button>
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceView"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#0A0A0A"></TextView>
</RelativeLayout>